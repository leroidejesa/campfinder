<h1>Map your route</h1>

<h4>Remember to leave no trace</h4>

  <div class="row">
    <div class="col-lg-2">
      <div id="info">
      </div>
    </div>
    <div class="col-lg-8">
      <div id="map-container">
        <div id="map-canvas"></div>
        <div id="stops"></div>
      </div>
    </div>
    <div class="col-lg-2">
      <div class="form-group float-left">
        <label for="tripDays">Desired # of Travel Days</label>
        <input type="number" class="form-control" id="days" value="3" min="2" max="7">
        <br><br>
        <label for="from">Starting From:</label>
        <input id="from" type="text" class="form-control" value="Portland, OR">
        <br><br>
        <label for="to">Going To:</label>
        <input id="to" type="text" class="form-control" value="San Deigo, CA">
        <br><br>
        <label for="miles">Miles from route to search for sites</label>
        <input type="number" id="miles" class="form-control" value="20" min="5" max="500">
        <br><br>
        <button class="btn btn-primary" onclick="newRoute();" id="updateRoute">Update Route</button>
      </div>
    </div>
  </div>


<script src="js/map.js" charset="utf-8"></script>
